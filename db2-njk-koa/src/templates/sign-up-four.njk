{% set title = 'myFixer.com' %}
{% set question = 'Already have an account?' %}
{% set offer = 'Log in' %}
{% extends "base-for-sign.njk" %}{% block content %}
    <div class="content sign-up sign-up-two">
        <form class="form">
            <div class="form__title">Complete your account</div>
            <input class="form__input"
                   type="password"
                   placeholder="Create password"
            />
            <div class="pass-level">
                <span class="pass-level__item pass-level__good"></span>
                <span class="pass-level__item pass-level__good"></span>
                <span class="pass-level__item pass-level__good"></span>
            </div>
            <input class="form__input"
                   type="password"
                   placeholder="Confirm password"
            />
            <div class="form__checkbox">
                <input type="checkbox" id="checkbox-2-1-1">
                <label for="checkbox-2-1-1"></label>
                <span>I agree to the myFixer.com</span>
                <span>Terms of Service</span>
            </div>
            <div class="form__checkbox">
                <input type="checkbox" id="checkbox-2-1-2">
                <label for="checkbox-2-1-2"></label>
                <span>I agree to the myFixer.com</span>
                <span>Privacy Police</span>
            </div>
            <div class="form__btn">
                <button class="btn">Done!</button>
            </div>
        </form>
    </div>
{% endblock %}